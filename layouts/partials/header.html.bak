<header class="simple-header">
    <div class="header">
        <div class="name">
            <a href="/">tr1x_em</a>
        </div>
        <nav class="nav-menu">
            {{ range $.Site.Menus.main }}
            <a href="{{ .URL }}" class="nav-item">{{ .Name }}</a>
            {{ end }}
        </nav>
    </div>
</header>

<style>
    .simple-header {
        position: sticky;
        z-index: 1000;
        top: 0;
        left: 0;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .header-container {
        /* max-width: 864px; */
        margin: 0 auto;
        /* padding: 0.5rem 2rem; */
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .name a {
        color: var(--accent);
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        letter-spacing: 1px;
    }

    .nav-menu {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-item {
        color: var(--color);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .nav-item:hover {
        color: var(--accent);
    }

    /* Mobile responsiveness */
    @media() {
        .header-container {
            /* padding: 0 1rem; */
            padding: 0;
        }

        .nav-menu {
            gap: 1rem;
        }

        .nav-item {
            font-size: 0.9rem;
        }
    }
</style>
